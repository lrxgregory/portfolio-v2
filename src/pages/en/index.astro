---
import Layout from '~/layouts/PageLayout.astro';

import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Steps from '~/components/widgets/Steps.astro';
import { t } from '~/utils/i18n.ts';

const lang = 'en';

const metadata = {
  title: t('hero.title', lang),
  ignoreTitleTemplate: true,
};

---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: t('hero.cta', lang),
        href: 'https://calendly.com/contact-gregoryleroux/discovery-call',
        target: '_blank',
        icon: 'tabler:calendar-event',
      },
      { text: t('nav.projects', lang), href: '#services' },
    ]}
  >
    <Fragment slot="title">
      {t('hero.title', lang)} <span class="text-accent dark:text-secondary highlight">Shopify</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        {t('hero.subtitle', lang)}</span>
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="services"
    tagline="Solutions E-commerce"
    title={t('services.title', lang)}
    subtitle={t('services.description', lang)}
    items={[
      {
        title: t('services.service1.title', lang),
        description: t('services.service1.description', lang),
        icon: 'tabler:shopping-cart',
      },
      {
        title: t('services.service2.title', lang),
        description: t('services.service2.description', lang),
        icon: 'tabler:code',
      },
      {
        title: t('services.service3.title', lang),
        description: t('services.service3.description', lang),
        icon: 'tabler:palette',
      },
      {
        title: t('services.service4.title', lang),
        description: t('services.service4.description', lang),
        icon: 'tabler:exchange',
      }
    ]}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title={t('about.title', lang)}
    subtitle={t('about.subtitle', lang)}
    id="steps"
    items={[
      {
        title: t('about.step1.title', lang),
        description: t('about.step1.description', lang),
        icon: 'tabler:package',
      },
      {
        title: t('about.step2.title', lang),
        description: t('about.step2.description', lang),
        icon: 'tabler:letter-case',
      },
      {
        title: t('about.step3.title', lang),
        description: t('about.step3.description', lang),
        icon: 'tabler:paint',
      },
      {
        title: t('about.step4.title', lang),
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title={t('expertise.title', lang)}
    subtitle={t('expertise.subtitle', lang)}
    tagline={t('expertise.tagline', lang)}
    items={[
      {
        title: t('expertise.item1.title', lang),
        description: t('expertise.item1.description', lang),
        icon: 'flat-color-icons:database',
      },
      {
        title: t('expertise.item2.title', lang),
        description: t('expertise.item2.description', lang),
        icon: 'flat-color-icons:template',
      },
      {
        title: t('expertise.item3.title', lang),
        description: t('expertise.item3.description', lang),
        icon: 'flat-color-icons:data-configuration',
      },
      {
        title: t('expertise.item4.title', lang),
        description: t('expertise.item4.description', lang),
        icon: 'tabler:exchange',
      },
      {
        title: t('expertise.item5.title', lang),
        description: t('expertise.item5.description', lang),
        icon: 'flat-color-icons:automatic',
      },
      {
        title: t('expertise.item6.title', lang),
        description: t('expertise.item6.description', lang),
        icon: 'flat-color-icons:support',
      }
    ]}
  >
    <Fragment>
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- FAQs Widget ******************* -->

  <FAQs
    title={t('faq.title', lang)}
    subtitle={t('faq.subtitle', lang)}
    tagline={t('faq.tagline', lang)}
    classes={{ container: 'max-w-6xl' }}
    id="faq"
    items={[
      {
        title: t('faq.item1.title', lang),
        description: t('faq.item1.description', lang),
      },
      {
        title: t('faq.item2.title', lang),
        description: t('faq.item2.description', lang),
      },
      {
        title: t('faq.item3.title', lang),
        description: t('faq.item3.description', lang),
      },
      {
        title: t('faq.item4.title', lang),
        description: t('faq.item4.description', lang),
      },
    
      // {
      //   title: 'Combien de temps prend la migration depuis PrestaShop ?',
      
      // {
      //   title: 'Comment gérez-vous les projets internationaux ?',
      //   description:
      //     "Ayant travaillé avec des clients internationaux comme Decathlon, je maîtrise la mise en place de boutiques multi-langues et multi-devises. Je peux configurer des domaines géographiques, optimiser le SEO international, et intégrer des solutions de traduction.",
      // },
      
    ]}
  />

  <!-- Stats Widget ****************** -->

  <!-- <Stats
    stats={[
      { title: 'Projets réalisés', amount: '50+' },
      { title: 'Clients satisfaits', amount: '98%' },
      { title: 'Heures de développement', amount: '1000+' },
      { title: 'Revenus générés', amount: '1M€+' },
    ]}
  /> -->


  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: t('hero.cta', lang),
        href: 'https://calendly.com/contact-gregoryleroux/discovery-call',
        target: '_blank',
        icon: 'tabler:calendar-event',
      },
    ]}
  >
    <Fragment slot="title">
      {t('hero.title', lang)}
    </Fragment>

    <Fragment slot="subtitle">
      {t('hero.subtitle', lang)}
    </Fragment>
  </CallToAction>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title={t('blog.title', lang)}
  />
</Layout>
