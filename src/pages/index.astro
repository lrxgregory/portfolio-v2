---
import Layout from '~/layouts/PageLayout.astro';

import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Steps from '~/components/widgets/Steps.astro';

const metadata = {
  title: 'AstroWind — Free template for creating websites with Astro + Tailwind CSS',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Réserver un appel',
        href: 'https://calendly.com/contact-gregoryleroux/appel-decouverte',
        target: '_blank',
        icon: 'tabler:calendar-event',
      },
      { text: 'Voir mes services', href: '#services' },
    ]}
  >
    <Fragment slot="title">
      Je vous accompagne dans vos projets <span class="text-accent dark:text-secondary highlight"> Shopify</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        De la conception de la boutique aux solutions techniques avancées</span>
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="services"
    tagline="Solutions E-commerce"
    title="Mes services Shopify"
    subtitle="Des solutions sur mesure pour optimiser votre boutique Shopify"
    items={[
      {
        title: 'Création de Boutique Shopify sur mesure',
        description:
          'Mise en place et configuration complète d’une boutique Shopify prête à vendre.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'Développement Shopify sur mesure',
        description:
          'Développement de fonctionnalités avancées, API, webhooks, intégrations tierces.',
        icon: 'tabler:code',
      },
      {
        title: 'Création de thèmes Shopify personnalisés',
        description:
          'Un design unique et optimisé pour l’expérience utilisateur et les conversions.',
        icon: 'tabler:palette',
      },
      {
        title: 'Migration de boutique Prestashop vers Shopify',
        description:
          'Accompagnement complet pour transférer votre boutique Prestashop vers Shopify sans perte de données.',
        icon: 'tabler:exchange',
      }
    ]}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Lancez votre boutique Shopify en 3 étapes simples"
    subtitle="Une approche personnalisée pour vous aider à atteindre vos objectifs."
    id="steps"
    items={[
      {
        title: 'Étape 1 : Définition du projet',
        description:
          "Nous discutons ensemble de vos besoins : design, fonctionnalités, intégrations API, migration Prestashop, etc.",
        icon: 'tabler:package',
      },
      {
        title: 'Étape 2 : Développement & Personnalisation',
        description:
          "Nous travaillons en étroite collaboration pour concevoir, développer et personnaliser votre boutique Shopify.",
        icon: 'tabler:letter-case',
      },
      {
        title: 'Étape 3 : Mise en ligne et suivi',
        description:
          "Je vous accompagne dans la prise en main et vous propose un suivi pour garantir un lancement sans accroc.",
        icon: 'tabler:paint',
      },
      {
        title: 'Votre boutique est prête à vendre !',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Expertise Shopify"
    subtitle="Des solutions techniques avancées pour votre boutique en ligne"
    tagline="Compétences techniques"
    items={[
      {
        title: 'Développement Backend',
        description: "Architecture robuste et évolutive pour gérer vos opérations e-commerce avec efficacité.",
        icon: 'flat-color-icons:database',
      },
      {
        title: 'Thèmes Sur Mesure',
        description: "Un design unique qui reflète votre marque et optimise l'expérience utilisateur.",
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Intégrations API',
        description: "Connexion transparente entre Shopify et vos outils externes pour une gestion simplifiée.",
        icon: 'flat-color-icons:data-configuration',
      },
      {
        title: 'Migration PrestaShop vers Shopify',
        description: "Transfert sécurisé de votre boutique PrestaShop vers Shopify, sans perte de données.",
        icon: 'tabler:exchange',
      },
      {
        title: 'Automatisation',
        description: "Workflows automatisés pour simplifier vos opérations quotidiennes et gagner du temps.",
        icon: 'flat-color-icons:automatic',
      },
      {
        title: 'Support Technique',
        description: "Accompagnement expert pour garantir le bon fonctionnement de votre boutique.",
        icon: 'flat-color-icons:support',
      }
    ]}
  >
    <Fragment>
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Questions fréquentes"
    subtitle="Réponses à vos interrogations pour une collaboration en toute transparence"
    tagline="Tout ce que vous devez savoir"
    classes={{ container: 'max-w-6xl' }}
    id="faq"
    items={[
      {
        title: 'Comment se déroule un projet de création de boutique Shopify ?',
        description:
          "Le processus commence par une réunion de cadrage pour comprendre vos besoins et objectifs. Je propose ensuite un devis détaillé et un planning. Le développement se fait par étapes avec des points réguliers pour validation. Une fois la boutique terminée, je vous forme à son utilisation et reste disponible pour le support.",
      },
      // {
      //   title: 'Combien de temps prend la migration depuis PrestaShop ?',
      //   description:
      //     "La durée dépend de la taille de votre catalogue et de la complexité de votre boutique actuelle. En général, comptez 2 à 4 semaines pour une migration complète, incluant les produits, clients, commandes et contenus. Le processus est planifié pour minimiser l'impact sur votre activité.",
      // },
      {
        title: 'Proposez-vous un accompagnement après la mise en ligne ?',
        description:
          "Oui, je propose plusieurs formules de maintenance et support technique. Cela inclut les mises à jour de sécurité, l'optimisation continue des performances, et une assistance technique rapide en cas de besoin. Je peux également vous former à l'utilisation avancée de votre boutique.",
      },
      {
        title: 'Pouvez-vous développer des fonctionnalités sur mesure ?',
        description:
          "Absolument. Grâce à mon expertise en développement backend Shopify, je peux créer des fonctionnalités personnalisées via l'API Shopify, développer des applications privées, et mettre en place des automatisations spécifiques à vos besoins.",
      },
      // {
      //   title: 'Comment gérez-vous les projets internationaux ?',
      //   description:
      //     "Ayant travaillé avec des clients internationaux comme Decathlon, je maîtrise la mise en place de boutiques multi-langues et multi-devises. Je peux configurer des domaines géographiques, optimiser le SEO international, et intégrer des solutions de traduction.",
      // },
      {
        title: 'Quels sont vos tarifs ?',
        description:
          "Chaque projet étant unique, les tarifs sont établis sur mesure en fonction de vos besoins. Je propose un devis détaillé après notre première discussion, incluant le développement, les intégrations nécessaires, et les options de maintenance.",
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <!-- <Stats
    stats={[
      { title: 'Projets réalisés', amount: '50+' },
      { title: 'Clients satisfaits', amount: '98%' },
      { title: 'Heures de développement', amount: '1000+' },
      { title: 'Revenus générés', amount: '1M€+' },
    ]}
  /> -->


  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Réservez un appel',
        href: 'https://calendly.com/contact-gregoryleroux/appel-decouverte',
        target: '_blank',
        icon: 'tabler:calendar-event',
      },
    ]}
  >
    <Fragment slot="title">
      Prêt à propulser votre boutique Shopify ?
    </Fragment>

    <Fragment slot="subtitle">
      Discutons de votre projet et transformons vos idées en réalité.
    </Fragment>
  </CallToAction>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Derniers Articles sur Shopify"
/>
</Layout>
